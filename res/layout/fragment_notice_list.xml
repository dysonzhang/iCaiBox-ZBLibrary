<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_vertical_match_match"
    android:background="@android:color/white"
    android:clickable="true" >

    <RelativeLayout
        android:id="@+id/rl_head_info"
        style="@style/ll_horizontal_match_match"
        android:layout_height="120dp"
        android:background="@drawable/head_info_bg" >

        <LinearLayout
            android:id="@+id/ll_head_info_user"
            style="@style/ll_vertical_match_match"
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_head_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_head_user" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="dyson"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_head_info_opreation"
            style="@style/ll_vertical_wrap_match"
            android:layout_alignParentRight="true"
            android:gravity="center" >

            <Button
                android:id="@+id/bt_my_box"
                style="@style/btn_middle_golden"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="我的财盒"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bt_check_in"
                style="@style/btn_middle_golden"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="打 卡"
                android:textSize="18dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/ll_horizontal_match_match"
        android:layout_height="24dp"
        android:background="@color/tab_bg_color"
        android:gravity="left|center" >

        <TextView
            style="@style/text_small_golden"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="最新动态" />
    </LinearLayout>

    <zuo.biao.library.ui.xlistview.XListView
        android:id="@+id/lvBaseList"
        style="@style/lv" />

</LinearLayout>