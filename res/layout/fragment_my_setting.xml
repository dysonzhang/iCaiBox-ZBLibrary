<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page"
    android:background="@color/main_bg_color" >

    <ScrollView
        style="@style/ll_vertical_match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <LinearLayout
                style="@style/ll_vertical_match_wrap"
                android:background="@drawable/my_head_bg"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_setting_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_head_user" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal_1px"
                android:layout_marginTop="0dp" />

            <LinearLayout
                android:id="@+id/ll_my_group"
                style="@style/content_item_white_samll" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="我的财盒群" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_help_center"
                style="@style/content_item_white_samll" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="帮助中心" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_feedback"
                style="@style/content_item_white_samll" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="意见反馈" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_about"
                style="@style/content_item_white_samll" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="关于i财盒" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_version"
                style="@style/content_item_white_samll" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="当前版本" />

                <TextView
                    android:id="@+id/tv_version"
                    style="@style/content_item_rt_img"
                    android:layout_marginRight="10dp"
                    android:text="v1.0.0" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <Button
                android:id="@+id/bt_logout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_get_code"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button_bg"
                android:text="退 出 登 录"
                android:textColor="@color/golden"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>